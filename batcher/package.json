{
  "name": "@paima/batcher",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "npm run prettier && npm run eslint",
    "cilint": "npm run cprettier && npm run eslint",
    "cprettier": "prettier --ignore-path ../.prettierignore --check '**/*.{ts,tsx}'",
    "eslint": "eslint '**/*.{ts,tsx}' --ignore-path ../.eslintignore",
    "prettier": "prettier --ignore-path ../.prettierignore --write '**/*.{ts,tsx}'",
    "build": "npx tsc --build tsconfig.build.json",
    "dev": "DOTENV_CONFIG_PATH=./.env.development node --require dotenv/config ./runtime/build/index.js",
    "prod": "node ./runtime/build/index.js",
    "prepare:standalone": "sh batcher-standalone/scripts/prepare_standalone_folders.sh",
    "build:standalone": "npm run build && npm run build:binary -w batcher-standalone",
    "build:dev-standalone": "npm run install-binaries -w batcher-standalone && npm run build:dev-binary -w batcher-standalone",
    "release": "npm run prepare:standalone && npm run build:standalone && npm run build:dev-standalone"
  },
  "workspaces": [
    "./address-validator",
    "./batched-transaction-poster",
    "./db",
    "./game-input-validator",
    "./runtime",
    "./utils",
    "./webserver",
    "./batcher-standalone"
  ],
  "dependencies": {
    "axios": "^1.4.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "typescript": "^4.9.4",
    "eslint": "^8.27.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0"
  }
}
